<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Танцующие коты!</title>
    <style>
        body {
            background-color: #1a1a1a;
            overflow: hidden;
            margin: 0; /* Убираем стандартные отступы body */
            height: 100vh; /* Занимаем всю высоту экрана */
        }

        .dancing-cat {
            position: absolute;
            width: 100px;
            height: auto;
            animation: dance 5s linear infinite;
        }

        @keyframes dance {
            0% { transform: translateX(0) rotate(0deg); }
            50% { transform: translateX(10px) rotate(5deg); }
            100% { transform: translateX(0) rotate(0deg); }
        }
    </style>
</head>
<body>

<script>
    function createDancingCat() {
        const cat = document.createElement('img');
        cat.src = 'https://static.wikia.nocookie.net/e090b2ad-fe0c-4ee8-bb38-d921c42d198d/scale-to-width/755'; // Обязательно замените!
        cat.alt = 'Танцующий кот';
        cat.className = 'dancing-cat';

        // Случайное положение с учетом размеров кота
        const catWidth = 100; // Ширина кота
        const catHeight = 100; // Примерная высота кота, можно уточнить

        const maxX = window.innerWidth - catWidth;
        const maxY = window.innerHeight - catHeight;

        cat.style.left = Math.random() * maxX + 'px';
        cat.style.top = Math.random() * maxY + 'px';

        cat.style.animationDelay = Math.random() * 5 + 's';

        document.body.appendChild(cat);
    }

    // Создаем котов после загрузки страницы
    window.addEventListener('load', function() {
        for (let i = 0; i < 20; i++) {
            createDancingCat();
        }
    });
</script>

</body>
</html>
